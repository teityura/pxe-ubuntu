set default="0"
set timeout=-1

if loadfont unicode ; then
  set gfxmode=auto
  set locale_dir=$prefix/locale
  set lang=en_US
fi
terminal_output gfxterm

set menu_color_normal=white/black
set menu_color_highlight=black/light-gray
if background_color 44,0,30; then
  clear
fi

function gfxmode {
  set gfxpayload="${1}"
  if [ "${1}" = "keep" ]; then
    set vt_handoff=vt.handoff=7
  else
    set vt_handoff=
  fi
}

set linux_gfx_mode=keep

export linux_gfx_mode

{% for client in pxe_clients %}
menuentry 'Ubuntu - {{ client.HOST_NAME }} (Autoinstall)' {
  gfxmode $linux_gfx_mode
  linux casper/vmlinuz autoinstall url=http://{{ docker_host.DOCKER_HOST_IP_ADDRESS }}/iso/ubuntu-live-server-amd64.iso "ds=nocloud-net;s=http://{{ docker_host.DOCKER_HOST_IP_ADDRESS }}/autoinstall/{{ client.HOST_NAME }}/" ip=dhcp netmask={{ docker_host.HOST_NETMASK }} gateway={{ docker_host.HOST_GATEWAY }} nameserver={{ docker_host.DNS_SERVER_1 }} only-ubiquity ---
  initrd /casper/initrd
}

menuentry 'Ubuntu - {{ client.HOST_NAME }} (Manual)' {
  gfxmode $linux_gfx_mode
  linux casper/vmlinuz url=http://{{ docker_host.DOCKER_HOST_IP_ADDRESS }}/iso/ubuntu-live-server-amd64.iso ip=dhcp netmask={{ docker_host.HOST_NETMASK }} gateway={{ docker_host.HOST_GATEWAY }} nameserver={{ docker_host.DNS_SERVER_1 }} only-ubiquity ---
  initrd /casper/initrd
}

{% endfor %}
